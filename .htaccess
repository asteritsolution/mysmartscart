# =====================================================
# MySmartSCart - Performance Optimization .htaccess
# =====================================================

# Enable Rewrite Engine
RewriteEngine On

# =====================================================
# GZIP COMPRESSION - Reduce file sizes by 70%
# =====================================================
<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML and fonts
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE application/x-font
    AddOutputFilterByType DEFLATE application/x-font-opentype
    AddOutputFilterByType DEFLATE application/x-font-otf
    AddOutputFilterByType DEFLATE application/x-font-truetype
    AddOutputFilterByType DEFLATE application/x-font-ttf
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
</IfModule>

# =====================================================
# BROWSER CACHING - Cache static files for 1 year
# =====================================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images - Cache for 1 year
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"
    
    # CSS and JavaScript - Cache for 1 month
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    
    # Fonts - Cache for 1 year
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    
    # HTML - Cache for 1 hour
    ExpiresByType text/html "access plus 1 hour"
    
    # Default
    ExpiresDefault "access plus 1 week"
</IfModule>

# =====================================================
# CACHE-CONTROL HEADERS
# =====================================================
<IfModule mod_headers.c>
    # Cache static assets for 1 year
    <FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|webp|svg|js|css|swf|woff|woff2|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Cache HTML for 1 hour
    <FilesMatch "\.(html|htm|php)$">
        Header set Cache-Control "max-age=3600, private, must-revalidate"
    </FilesMatch>
    
    # Enable Keep-Alive
    Header set Connection keep-alive
    
    # Security Headers
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

# =====================================================
# ETAG - Disable for better caching
# =====================================================
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# =====================================================
# PHP OPTIMIZATION
# =====================================================
<IfModule mod_php7.c>
    php_value memory_limit 256M
    php_value max_execution_time 300
    php_value post_max_size 64M
    php_value upload_max_filesize 64M
    php_flag output_buffering on
</IfModule>

# =====================================================
# PREVENT HOTLINKING OF IMAGES
# =====================================================
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?mysmartscart\.in [NC]
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?localhost [NC]
    RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,NC,L]
</IfModule>

# =====================================================
# PROTECT SENSITIVE FILES
# =====================================================
<FilesMatch "^(config\.php|\.htaccess|\.env)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Protect database folder
<IfModule mod_rewrite.c>
    RewriteRule ^database/ - [F,L]
    RewriteRule ^includes/ - [F,L]
    RewriteRule ^mailing/ - [F,L]
</IfModule>

# =====================================================
# WEBP IMAGE SERVING (if browser supports)
# =====================================================
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_ACCEPT} image/webp
    RewriteCond %{REQUEST_FILENAME} (.*)\.(jpe?g|png)$
    RewriteCond %{REQUEST_FILENAME}.webp -f
    RewriteRule ^(.+)\.(jpe?g|png)$ $1.$2.webp [T=image/webp,L]
</IfModule>

# =====================================================
# SEO-FRIENDLY URL REWRITING
# =====================================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /mysmartscart/
    
    # =====================================================
    # ADMIN PANEL URL REWRITING (Allow .php extension removal)
    # =====================================================
    
    # Admin panel: Remove .php extension (Internal rewrite, no redirect)
    # Example: /adminpanel/dashboard -> /adminpanel/dashboard.php
    RewriteCond %{REQUEST_URI} ^/mysmartscart/adminpanel/([a-zA-Z0-9_-]+)/?$ [NC]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{DOCUMENT_ROOT}/mysmartscart/adminpanel/%1.php -f
    RewriteRule ^adminpanel/([a-zA-Z0-9_-]+)/?$ adminpanel/$1.php [L]
    
    # =====================================================
    # REMOVE .PHP EXTENSION FROM URLs
    # =====================================================
    
    # Exclude adminpanel from frontend rewrite rules
    RewriteCond %{REQUEST_URI} ^/mysmartscart/adminpanel/ [NC]
    RewriteRule ^ - [L]
    
    # Redirect index.php to root (must be first)
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+(.*/)?index\.php[\s?] [NC]
    RewriteRule ^(.*/)?index\.php$ /mysmartscart/ [R=301,L]
    
    # Redirect .php extension to non-extension URL (301 Permanent Redirect)
    # Exclude product.php and category.php as they have special SEO URLs
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+(.+)\.php[\s?] [NC]
    RewriteCond %{REQUEST_URI} !^/mysmartscart/(product|category)\.php [NC]
    RewriteRule ^(.+)\.php$ /mysmartscart/$1 [R=301,L]
    
    # =====================================================
    # REDIRECT OLD URLs TO NEW SEO-FRIENDLY URLs (301 Permanent Redirect)
    # =====================================================
    
    # Redirect old product URLs to new SEO-friendly format
    # product.php?slug=apple-cider-vinegar -> product/apple-cider-vinegar
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+(.*/)?product\.php\?slug=([^\s&]+) [NC]
    RewriteRule ^(.*/)?product\.php$ /mysmartscart/product/%2? [R=301,L]
    
    # Redirect old category URLs to new SEO-friendly format
    # shop.php?category=electronics -> category/electronics
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+(.*/)?shop\.php\?category=([^\s&]+) [NC]
    RewriteRule ^(.*/)?shop\.php$ /mysmartscart/category/%2? [R=301,L]
    
    # Redirect old category.php?slug= to new format
    # category.php?slug=electronics -> category/electronics
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+(.*/)?category\.php\?slug=([^\s&]+) [NC]
    RewriteRule ^(.*/)?category\.php$ /mysmartscart/category/%2? [R=301,L]
    
    # =====================================================
    # REWRITE SEO-FRIENDLY URLs TO PHP FILES
    # =====================================================
    
    # Exclude adminpanel directory from rewriting
    RewriteCond %{REQUEST_URI} !^/mysmartscart/adminpanel/ [NC]
    
    # Prevent rewriting for existing files and directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Exclude static assets (CSS, JS, images, fonts) from rewriting
    RewriteCond %{REQUEST_URI} !\.(css|js|jpg|jpeg|png|gif|webp|svg|ico|woff|woff2|ttf|eot|pdf|zip)$ [NC]
    
    # Product SEO-friendly URLs: product/slug
    # Example: product/apple-cider-vinegar -> product.php?slug=apple-cider-vinegar
    RewriteRule ^product/([a-z0-9-]+)/?$ product.php?slug=$1 [L,QSA]
    
    # Category SEO-friendly URLs: category/slug
    # Example: category/electronics -> shop.php?category=electronics
    RewriteRule ^category/([a-z0-9-]+)/?$ shop.php?category=$1 [L,QSA]
    
    # Shop with category: shop/category-slug
    RewriteRule ^shop/([a-z0-9-]+)/?$ shop.php?category=$1 [L,QSA]
    
    # Remove .php extension - Internal rewrite (no redirect)
    # Example: shop -> shop.php, about -> about.php
    # Exclude adminpanel from this rule
    RewriteCond %{REQUEST_URI} !^/mysmartscart/adminpanel/ [NC]
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^([^/]+)/?$ $1.php [L]
    
    # Handle root - serve index.php without showing it
    RewriteCond %{REQUEST_URI} ^/mysmartscart/?$
    RewriteRule ^$ index.php [L]
    
    # API routes (keep existing)
    RewriteRule ^api/(.*)$ api/products.php?action=$1 [L,QSA]
</IfModule>

# =====================================================
# ERROR PAGES
# =====================================================
ErrorDocument 404 /mysmartscart/index.php
ErrorDocument 500 /mysmartscart/index.php

